<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather Application</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="CSS/style.css">
    <link rel="shortcut icon" href="../Images/icon.png" type="image/png">
</head>

<body>
    {{!-- Navbaar --}}
    {{>navbar}}

    <!-- Heero section -->
    <div class="container-fluid my-4 mx-auto">
        <div class="row ">
            <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocmplete="off">
                        <input type="submit" value="Search" id="searchbtn">
                    </form>
                </div>
                <div class="temp_info">
                    <div class="top_layer">
                        <p id="day">Monday</p>
                        <p id="date">22 feb</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Output show here: </p>
                        <div class="middle_layer data_hide">
                            <p id="tempp"><span id="temp_real_value">0</span><sup>o</sup>C</p>
                            <p id="temp_status"><img src="Images/cloud.png" alt="tempstatus"></p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer Section -->
    {{>footer}}


    <!-- Script tag for bootstraps  -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>

    <script src="JS/main.js"></script>
</body>

</html>
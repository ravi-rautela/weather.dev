<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather Application</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="CSS/style.css">
    <link rel="shortcut icon" href="../Images/icon.png" type="image/png">
</head>

<body>
    {{!-- Navbaar --}}
    {{>navbar}}

    <!-- Heero section -->
    <div class="container-fluid mt-4 mx-auto">
        <div class="row ">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row d-flex justify-content-center align-items-center">
                    <!-- left side -->
                    <div class="col-md-6 col-12 main_header_left">
                        <p class="welcome-text">Welcome to weather Application</p>
                        <h1>Get the latest <span>weather </span>info of your city.</h1>
                        <a href="/weather"><button class="btn btn-primary ">Check Now</button></a>
                    </div>
                    <!-- right side -->
                    <div class="col-md-6 col-12 main_header_right">
                        <!-- carousel -->
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class=" w-100" src="Images/b1.png" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class=" w-100" src="Images/b2.png" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="w-100" src="Images/b3.png" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer Section -->
    {{>footer}}


    <!-- Script tag for bootstraps  -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
</body>

</html>